/* pages/index1/index1.wxss */

.indexContainer {
}

.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 五个标题导航 */

.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  line-height: 100rpx;
  font-size: 46rpx;
  background-color: rgba(240, 19, 19);
}

.navItem text {
  font-size: 26rpx;
}

.title {
  margin: 34rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #666;
}

.header {
  margin: 0 30rpx;
}

.removieContainer .more {
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.scroll-view_H {
  display: flex;
}

.scrollItem {
  width: 200rpx;
  margin: 24rpx 6rpx 10rpx 16rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 2rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 单行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  /* white-space: nowrap; */
}
